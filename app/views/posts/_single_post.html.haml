- posts.each do |post|
  - if post.active?
    .thumbnail
      %h3= post.title
      = link_to image_tag(post.image_url.to_s), post_path(post), class: "img-responsive img-thumbnail"

      .caption
        %p= truncate post.description, length: 140
        = link_to 'Ver', post, class: "btn btn-default"

    = link_to 'Ver todos', "#{post.tipo.pluralize}_path"