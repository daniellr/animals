.panel.panel-default
  .panel-heading Descripción
  .panel-body
    %h3
      = @post.title
    %p
      %strong ¿Qué animalito es?
      - if @post.animal_type == 'dog'
        Perrito
      - elsif @post.animal_type == 'cat'
        Gatito
    %p
      %strong Raza:
      = @post.breed
    %p
      %strong Edad:
      = @post.age
    %p
      %strong ¿Dónde?
      = @post.location
    %p= @post.description