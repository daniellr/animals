<h5>
  <div class="text-center">
    <% if user_signed_in? and current_user.id == @post.user.id %>
      <%= link_to 'Editar', edit_post_path(@post) %>
      <%= link_to 'Borrar', @post, method: :delete, data: { confirm: "Seguro?"} %>
      <%= link_to 'Atrás', posts_path %>
    <% else %>
      <%= link_to 'Atrás', posts_path %>
    <% end %>	
  </div>
</h5>