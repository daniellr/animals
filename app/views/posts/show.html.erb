 <div class="container">
 <div class="col-md-6 col-md-offset-3">
  <p id="notice"><%= notice %></p>
  <div class="panel panel-default">
    <div class="panel-body">
      <h2> <div class="title"> <%= @post.title %></div></h2>


        <%= image_tag @post.image.url.to_s, class: "img-responsive img-thumbnail"%> <br><br>
      
        <div class="panel panel-default">
          <div class="panel-heading">Información de contacto</div>
          <div class="panel-body">
            <% if @post.tipo == 'perdido' %>
              <p>Perdido</p>
            <% elsif @post.tipo == 'encontrado'%>
              <p>Encontrado</p>
            <% elsif @post.tipo == 'adopcion'%>
              <p>En Adopción</p>
            <% end %>
            <p><%= @post.user.name %></p>
            <p><%= @post.location %></p>
            <p><%= @post.contact %></p>
          </div>
        </div>
      

        <div class="panel panel-default">
          <div class="panel-heading">Descripción: </div>
          <div class="panel-body">
        <%= @post.description %>
      </div>
    </div>
  </div>
  </div>

  <% if user_signed_in? and current_user.id == @post.user.id %>
  <%= link_to 'Editar', edit_post_path(@post) %> |
  <%= link_to 'Atrás', posts_path %> |
  <%= link_to 'Borrar', @post, method: :delete, data: { confirm: "Seguro?"} %>
  <% else %>
  <%= link_to 'Atrás', posts_path %> 
  <% end %>
  </div>
  </div>
