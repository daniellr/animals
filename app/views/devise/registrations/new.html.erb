<div class="container">
  <div class="panel panel-default col-md-8">
    <div class="panel-body">
      <h2>Registro</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :defaults => {:required => false}) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :name, required: true, autofocus: true, label: 'Nombre completo' %>
        <%= f.input :nick, required: true, label: 'Nickname'  %>
        <%= f.input :email, required: true, label: 'Correo'  %>
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
        <%= f.input :password_confirmation, required: true %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Sign up" %>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

