<div class="wrap">
  <% @user.posts.each do |post| %>
  <%= post.title %>
  <%= link_to "Ver", post_path(post) %>
  <%= link_to "Editar", edit_post_path(post) %>
  <%= link_to "Borrar", post, method: :delete, data: { confirm: "Seguro?"} %>
  <br>

  <% end %>

</div>
